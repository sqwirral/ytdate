{
  "manifest_version": 2,
  "name": "Youtube Date Shower",
  "version": "1.0",

  "description": "Replaces date on Youtube video pages.",
  "homepage_url": "https://github.com/sqwirral/ytdate",
  "icons": {
    "64": "icons/ytdate-64.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],

  "browser_action": {
    "default_icon": {
      "64": "icons/ytdate-64.png"
    },
    "default_title": "Youtube Date Shower",
    "default_popup": "popup/popup.html"
  },

  "web_accessible_resources": [
    "icons/ytdate-64.png",
    "popup/ytdate-datefix.png"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/yt-date.js"]
    }
  ]
}
